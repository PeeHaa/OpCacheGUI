<?php
$status = new OpCacheGUI\OpCache\Status($this->byteFormatter, opcache_get_status());
$classCycler = new OpCacheGUI\Presentation\ClassCycler(['odd', 'even']);

$directories = [];
foreach($status->getCachedScripts() as $data) {
    $directories[dirname($data['full_path'])][basename($data['full_path'])] = $data;
}
?>

<article class="cols-1">
    <h2><?= $this->translator->translate('scripts.title'); ?></h2>
    <table id="cached">
        <tbody>
            <?php if (!count($status->getCachedScripts())) { ?>
                <tr class="<?= $classCycler->next(); ?>">
                    <td class="empty" colspan="5"><?= $this->translator->translate('scripts.empty'); ?></td>
                </tr>
            <?php } else { ?>
                <?php $i = 0; ?>
                <?php foreach ($directories as $directory => $scripts) { ?>
                    <tr class="<?= $classCycler->next(); ?>">
                        <td colspan="6" class="directory" data-directoryid="<?= ++$i; ?>"><div class='sprite toggle-expand'></div><?= $directory . sprintf($this->translator->translate('scripts.directory.script_count'), count($scripts)); ?></td>
                    </tr>
                    <tr class="script heading" data-directoryid="<?= $i; ?>">
                        <th class="full_path"><?= $this->translator->translate('scripts.full_path'); ?></th>
                        <th class="hits"><?= $this->translator->translate('scripts.hits'); ?></th>
                        <th class="memory_consumption"><?= $this->translator->translate('scripts.memory_consumption'); ?></th>
                        <th class="last_used_timestamp"><?= $this->translator->translate('scripts.last_used_timestamp'); ?></th>
                        <th class="timestamp"><?= $this->translator->translate('scripts.timestamp'); ?></th>
                        <th class="invalidate"></th>
                    </tr>
                    <?php foreach ($scripts as $filename => $script) { ?>
                        <tr class="script" data-directoryid="<?= $i; ?>">
                            <td class="full_path"><?= $filename; ?></td>
                            <td class="hits"><?= $script['hits']; ?></td>
                            <td class="memory_consumption"><?= $script['memory_consumption']; ?></td>
                            <td class="last_used_timestamp"><?= $script['last_used_timestamp']; ?></td>
                            <td class="timestamp"><?= $script['timestamp']; ?></td>
                            <td class="invalidate">
                                <form action="<?= $this->url->get('invalidate'); ?>" method="post">
                                    <input type="hidden" name="csrfToken" value="<?= $this->csrfToken->get(); ?>">
                                    <input type="hidden" name="key" value="<?= $script['full_path']; ?>">
                                    <input type="submit" name="submit" value="<?= $this->translator->translate('script.invalidate'); ?>">
                                </form>
                            </td>
                        </tr>
                    <?php } ?>
                <?php } ?>
            <?php } ?>
        </tbody>
    </table>
</article>
